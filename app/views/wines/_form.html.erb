<%= form_for(@wine) do |f| %>
	<dl>
		<dt><%= f.label :name %>:</dt>
		<dd>
			<%=f.text_field :name, autofocus: true %>
		</dd>

		<dt><%= f.label :year %>:</dt>
		<dd><%= f.text_field :year %></dd>
		
		<dt><%= f.label :winery %>:</dt> 
		<dd><%= f.text_field :winery %></dd>
		
		<dt><%= f.label :country %>:</dt>	
		<dd><%= f.text_field :country %></dd>
				
		<dt><%= f.label :varietal %>:</dt>
		<dd><%= f.text_field :varietal %></dd>
	<dl>	

	<p>
		<%= f.submit %>
		<%= link_to 'Cancel', wines_path %>
	</p>
<% end %>