<%= form_for( [ @wine, @log_entry ] ) do |f| %>
  <%= render 'shared/validation_errors', object: @log_entry %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, 
      autofocus: true, placeholder: 'Name', 
      class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>  
    <% LogEntry::RATINGS.each do |rating| %>
      <%= f.radio_button :rating, rating %> <%= rating %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location, 
      placeholder: 'Location', 
      class: "form-control" %> 
  </div>

  <div class="form-group">
    <%= f.label :comments %>
    <%= f.text_area :comments,
      placeholder: 'Comments',
      class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :tasted_on %>
    <%= f.date_select :tasted_on %>

  </div>    

  <p>
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', wine_log_entries_path(@wine), id: 'cancel_log_entry' %>
  </p>
<% end %>