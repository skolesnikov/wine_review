<header>Reviews for <%= link_to(@wine.name, @wine) %></header>
<ol id="log_entries">
  <% @log_entries.each do |log_entry| %>
    <li>
      <span class="review">
      	<%= pluralize(log_entry.rating, 'star') %>
      </span>
      <span class="user">
      	by <%= log_entry.name %>
      	at <%= log_entry.location %>
      </span>
      <span class="date">
        on <%= formatted_date(log_entry.tasted_on) %>
      </span>
      <p>
        &quot;<%= log_entry.comments %>&quot;
      </p>
    </li>
  <% end %>
</ol>

<%= link_to 'Write a Review', new_wine_log_entry_path(@wine),
        remote: true,
        data: { 'update-target' => 'log_entry_form_container' },
        class: 'btn btn-primary' %>

<div id="log_entry_form_container"></div>